<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.edu.sdu.online.isdu.ui.activity.EditProfileActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_back"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/btn_done"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:src="@drawable/ic_done"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--头像-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_image_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/btn_edit_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑头像"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/text_button_background"/>

            <!--信息区域-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <!--用户名-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="用户名"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>

                    <EditText
                        android:id="@+id/edit_user_name"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="User Name"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorWhite"
                        android:maxLines="1"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorThemeGrey"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <!--性别-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>

                    <TextView
                        android:id="@+id/edit_gender"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="女"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryText"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorWhite"
                        android:maxLines="1"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorThemeGrey"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>


                <!--专业-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="专业"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>

                    <EditText
                        android:id="@+id/edit_profession"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="软件工程"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorWhite"
                        android:maxLines="1"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorThemeGrey"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <!--年龄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="年龄"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>

                    <EditText
                        android:id="@+id/edit_age"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="20"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:inputType="number"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorWhite"
                        android:maxLines="1"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorThemeGrey"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <!--年龄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="个人介绍"
                        android:layout_gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>

                    <EditText
                        android:id="@+id/edit_introduction"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="我是谁？我在哪？"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorWhite"
                        android:maxLines="5"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
